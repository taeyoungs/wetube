mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)
        .videoPlayer__controls
            .videoPlayer__column
                span#jsPlayBtn
                    i.fas.fa-play
                span
                    | 00:00 / 10:00
            .videoPlayer__column
                span
                    i.fas.fa-volume-down
                span
                    i.fas.fa-expand
