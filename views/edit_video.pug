extends layouts/main

block content
    .form-container
        form(action=`/videos${routes.edit_video}`, method="post")
            input(type="text" name="title" placeholder="Title")
            textarea(name="description", placeholder="Description")
            input(type="submit" value="Update Video")
        a.form-container__link.form-container__link--delete(href=`/videos${routes.delete_video}`) Delete Video
